{
  "name": "@remix-run/interaction",
  "version": "0.0.0",
  "description": "Like components but for events",
  "author": "Ryan Florence <rpflorence@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/events"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/events#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./form": "./src/lib/interactions/form.ts",
    "./keys": "./src/lib/interactions/keys.ts",
    "./popover": "./src/lib/interactions/popover.ts",
    "./press": "./src/lib/interactions/press.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./form": {
        "types": "./dist/lib/interactions/form.d.ts",
        "default": "./dist/lib/interactions/form.js"
      },
      "./keys": {
        "types": "./dist/lib/interactions/keys.d.ts",
        "default": "./dist/lib/interactions/keys.js"
      },
      "./popover": {
        "types": "./dist/lib/interactions/popover.d.ts",
        "default": "./dist/lib/interactions/popover.js"
      },
      "./press": {
        "types": "./dist/lib/interactions/press.d.ts",
        "default": "./dist/lib/interactions/press.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "size": "esbuild src/index.ts --bundle --minify --outfile=.temp-bundle.js --format=esm && echo \"ðŸ“¦ Bundle sizes:\" && echo \"   Uncompressed: $(ls -lah .temp-bundle.js | awk '{print $5}')\" && echo \"   Gzipped: $(gzip -c .temp-bundle.js | wc -c | tr -d ' ') bytes\" && rm .temp-bundle.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "install:chromium": "playwright install chromium",
    "prepublishOnly": "pnpm build",
    "examples:watch": "esbuild examples/*/entry.ts --bundle --outdir=examples --outbase=examples --out-extension:.js=.bundled.js --format=esm --platform=browser --target=es2020 --sourcemap=inline --watch",
    "examples": "concurrently \"pnpm examples:watch\" \"npx serve examples\""
  },
  "devDependencies": {
    "@vitest/browser": "^3.2.4",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.5",
    "playwright": "^1.53.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
